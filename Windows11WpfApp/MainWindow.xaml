<Window x:Class="Windows11WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows11WpfApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="300"
        Height="200"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid Margin="8">
        <!-- 使用Border实现圆角效果 -->
        <Border CornerRadius="{StaticResource DefaultCornerRadius}" Background="{StaticResource ControlBackgroundColor}">
            <StackPanel Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 开关控件 -->
                <ToggleSwitch x:Name="toggleSwitch" Header="开关控件" Margin="8" HorizontalAlignment="Left" />
                
                <!-- 滑块控件 -->
                <Slider x:Name="slider" Minimum="0" Maximum="100" Value="50" Margin="8" HorizontalAlignment="Left" />
                
                <!-- 按钮控件 -->
                <Button x:Name="button" Content="按钮控件" Margin="8" HorizontalAlignment="Left" />
                
                <!-- 额外测试控件 -->
                <ToggleSwitch x:Name="toggleSwitch2" Header="另一个开关" Margin="8" HorizontalAlignment="Left" />
                <Button x:Name="button2" Content="另一个按钮" Margin="8" HorizontalAlignment="Left" />
            </StackPanel>
        </Border>
    </Grid>
</Window>